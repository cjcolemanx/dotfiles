set selection-clipboard clipboard
set synctex             true
set statusbar-h-padding 0

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map K scroll full-up
map J scroll full-down
map r reload
map R rotate
map <C-k> zoom in
map <C-j> zoom out
map g goto top
map <Space> toggle_fullscreen

map [fullscreen] u scroll half-up
map [fullscreen] d scroll half-down
map [fullscreen] D toggle_page_mode
map [fullscreen] <C-k> zoom in
map [fullscreen] <C-j> zoom out
map [fullscreen] g goto top
map [fullscreen] <Space> toggle_fullscreen

